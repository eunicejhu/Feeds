{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "eslint-config-prettier"
  ],
  "settings": {
    "react": {
      "version": "16.8"
    }
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-unused-vars": ["off"],
    "semi": ["error", "never"],
    "max-len": ["error", { "code": 80 }],
    "indent": ["error", 2],
    "no-console": ["error", { "allow": ["warn", "error"] }]
  }
}
